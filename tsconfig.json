{
  "compilerOptions": {
    "outDir": "./dist",       // Output directory for compiled files
    "rootDir": "./",          // Set rootDir to the project root (where server.ts is located)
    "strict": true,           // Enable strict mode
    "esModuleInterop": true,  // Allows compatibility between CommonJS and ES modules
    "module": "commonjs",     // Use CommonJS for module system
    "target": "es6",          // Transpile to ES6 or higher
    "skipLibCheck": true      // Skip type checking of declaration files
  },
  "include": [
    "**/*.ts"                 // Include all .ts files
  ],
  "exclude": [
    "node_modules"            // Exclude node_modules folder
  ]
}
